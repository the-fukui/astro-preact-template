</Layout>

<style is:global lang="scss">
  #content {
    @import 'src/styles/post_content';
  }
</style>
<style lang="scss">
  .header {
    position: relative;
    display: flex;

    &::after {
      position: absolute;
      top: 0;
      left: 0;
      z-index: 0;
      width: 100%;
      height: 100%;
      content: '';
      background: $darkgreen;
      transform: rotateZ(3deg);
      transform-origin: center center;
    }

    &::before {
      @extend .header, :after;

      z-index: -2;
      background: $green;
      transform: rotateZ(6deg);
    }

    &__left {
      position: relative;
      z-index: 5;
      flex: 1 1 0%;
      width: 100%;
    }

    &__right {
      position: relative;
      z-index: 5;
      display: flex;
      align-items: flex-end;
      width: 5rem;
      padding-bottom: 3px;

      @include mq-down(sm) {
        width: get_vw(27);
      }
    }

    &__thumbnail {
      :global(img) {
        width: 100%;
        height: 50vw;
        max-height: 90vh;
        object-fit: cover;
      }
    }

    &__title {
      padding: 15px 30px 20px;
      margin-top: 5px;
      font-size: 4rem;
      font-weight: bold;
      color: white;
      background: $black;

      @include mq-down(sm) {
        padding: get_vw(15);
        font-size: get_vw(20);
      }
    }

    &__date {
      font-size: 3rem;
      color: white;

      // height: 100%;
      // width: 100%;
      text-align: right;
      white-space: nowrap;
      transform: translateX(-100%) rotateZ(90deg);
      transform-origin: bottom right;
      @include ff-gill-nova;

      @include mq-down(sm) {
        font-size: get_vw(16);
      }
    }
  }

  .content-wrapper {
    margin-top: 60px;
    background: $white;
  }

  .list-headings {
    position: fixed;
    right: 0;
    z-index: 996;
    max-width: calc((100vw - #{$pc-width}) / 2 + 180px);
    transition: transform 0.4s cubic-bezier(0.17, 0.92, 0.14, 0.96);
    transform: translateX(100%);

    &--active {
      transform: translateX(0);
    }

    @include mq-down(max) {
      max-width: 180px;
    }

    @include mq-down(md) {
      display: none;
    }
  }

  .content {
    position: relative;
    padding-top: 60px;
    padding-right: calc(180px + 30px);
    padding-bottom: 120px;
    white-space: pre-wrap;
    border-top: 5px solid $red;

    @include mq-down(md) {
      padding-right: 15px;
    }

    @include mq-down(sm) {
      padding-bottom: get_vw(60);
    }
  }

  .navigation {
    display: flex;
    justify-content: space-between;
    transform: translateY(-50%);

    @include mq-down(sm) {
      display: block;
      padding-bottom: 1px;
      background: $white;
      transform: none;
    }

    &__link {
      width: calc(50% - 7.5px);

      @include mq-down(sm) {
        width: 100%;
      }
    }
  }

  .button-share-twitter {
    position: fixed;
    right: 0;
    bottom: calc(68px + 15px);
    z-index: 990;

    @include mq-down(sm) {
      bottom: calc(#{get_vw(7.5)});
    }
  }

  .button-share-line {
    @extend .button-share-twitter;

    bottom: calc(68px + 15px + 42px + 15px);

    @include mq-down(sm) {
      bottom: calc(#{get_vw(7.5)} + #{get_vw(42)} + #{get_vw(7.5)});
    }
  }

  .button-share-fb {
    @extend .button-share-twitter;

    bottom: calc(68px + 15px + 42px + 15px + 42px + 15px);

    @include mq-down(sm) {
      bottom: calc(
        #{get_vw(7.5)} + #{get_vw(42)} + #{get_vw(7.5)} + #{get_vw(42)} + #{get_vw(
            7.5
          )}
      );
    }
  }
</style>
