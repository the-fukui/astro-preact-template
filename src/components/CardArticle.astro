---
import { Picture } from '@astrojs/image/components'
import noimage from '@images/noimage.jpg'

import dayjs from 'dayjs'

export interface Props extends astroHTML.JSX.HTMLAttributes {
  post: {
    postType: 'Qiita' | 'normal'
    id: string
    url?: string
    title?: string
    date: string
    thumbnail?: {
      url: string
    }
    likes_count?: number
  }
  odd?: boolean
  mini?: boolean
}
const {
  class: className,
  post,
  odd = false,
  mini = false,
} = Astro.props as Props

const published = dayjs(post.date).format('MMM D, YYYY')
---

<div
  class={`${odd && 'post--odd'} ${mini && 'post--mini'} post ${className}`}
  data-watch-is-scrolled={JSON.stringify({
    rootMargin: mini ? '-100px' : '-150px',
  })}
>
  <div class="post__text">
    <time datetime={post.date} class="post__date">{published}</time>
    <a
      href={post.postType === 'normal' ? `/blog/${post.id}/` : post.url}
      class="post__link"
    >
      <div class="post__title">{post.title}</div>
    </a>
  </div>
  <a
    href={post.postType === 'normal' ? `/blog/${post.id}/` : post.url}
    style="display: block"
    class="post__img"
  >
    <Picture
      src={post.thumbnail && post.thumbnail.url
        ? post.thumbnail.url +
          (import.meta.env.DEV && post.postType === 'normal'
            ? '?w=800&fm=webp'
            : '')
        : noimage}
      widths={[200, 400]}
      sizes={mini ? '200px' : '400px'}
      aspectRatio="50:31"
      alt=""
    />

    {
      post.postType === 'Qiita' && (
        <>
          <img src="/img/qiita.svg" class="post__from" alt="Qiita" />
          {post.likes_count && post.likes_count > 0 && (
            <div class="post__lgtms">
              <img src="/img/lgtm.svg" class="post__lgtm" alt="LGTM" />
              {post.likes_count}
            </div>
          )}
        </>
      )
    }
  </a>
</div>

<style lang="scss">
  .post {
    display: flex;
    flex-direction: row-reverse;
    align-items: flex-end;
    padding-bottom: 15px;

    @include mq-down(md) {
      display: block;
    }

    &--odd {
      flex-direction: row;

      .post {
        &__img {
          transform: perspective(250px) rotateY(-5deg);
          transform-origin: center right;

          @include mq-down(md) {
            margin-right: 0;
            margin-left: auto;
          }
        }

        &__text {
          transform: translateX(-50px);
        }

        &__date {
          padding-left: 15px;
        }

        &__title {
          padding-right: 0;
          padding-left: 15px;

          &::after {
            right: -90px;
            left: auto;
          }
        }
      }
    }

    &--mini {
      align-items: center;

      .post {
        &__img {
          width: 200px;
          height: 124px;
        }

        &__from {
          height: 1.5em;
        }

        &__lgtms {
          bottom: calc(15px + 1.5em + 7.5px);

          @include mq-down(sm) {
            bottom: calc(15px + 2em + 7.5px);
          }
        }
      }
    }

    &__img {
      position: relative;
      z-index: 1;
      display: block;
      width: 100%;
      max-width: 400px;
      height: 100%;
      max-height: 247px;
      overflow: hidden;
      transform: perspective(250px) rotateY(5deg);
      transform-origin: center left;

      @include mq-down(md) {
        margin-bottom: -5px;
      }

      &::after {
        display: block;
        width: 100%;
        height: 100%;
        padding-top: 62.5%;
        content: '';
      }

      :global(picture > img) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s, filter 0.2s;
        transform-origin: center center;
      }

      &:hover {
        :global(picture > img) {
          transform: scale(1.2);
        }
      }
    }

    &__from {
      position: absolute;
      right: 0;
      bottom: 15px;
      width: auto;
      height: 2em;
    }

    &__lgtms {
      position: absolute;
      right: 0;
      bottom: calc(15px + 2em + 15px);
      display: flex;
      align-items: center;
      width: auto;
      height: 2em;
      padding: 0 5px;
      font-size: 1.5rem;
      color: #55c500;
      background: white;
      border: 2px solid #55c500;
      border-right: none;
    }

    &__lgtm {
      width: 32px;
      height: auto;
      margin-right: 5px;
    }

    &__text {
      flex: 1 1 0%;
      opacity: 0;
      transition: transform 0.2s, opacity 0.2s;
      transform: translateX(50px);

      &:hover + .post__img {
        :global(picture > img) {
          transform: scale(1.2);
        }
      }
    }

    &__meta {
      display: flex;
      justify-content: space-between;
    }

    &__date {
      // padding: 0 15px;
      @include ff-gill-nova;

      font-size: 1.9rem;
    }

    &__link {
      display: block;
    }

    &__title {
      position: relative;
      padding: 10px 15px 0 0;
      font-size: 2rem;
      color: white;

      &::after {
        position: absolute;
        top: 0;
        left: -90px;
        z-index: -1;
        width: calc(100% + 90px);
        height: calc(100% + 10px);
        content: '';
        background: $black;
      }
    }
  }

  .intersected {
    .post {
      &__text {
        opacity: 1;
        transform: translateX(0);
      }

      &--odd {
        .post {
          &__text {
            opacity: 1;
            transform: translateX(0);
          }
        }
      }
    }
  }
</style>
