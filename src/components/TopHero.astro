      opacity: 0.03;
      transform: translateY(-50%) translateX(-50%);
      transform-origin: center center;
      animation: expand 2.5s ease 0s;
    }

    @keyframes expand {
      0% {
        opacity: 0;
        transform: translateY(-50%) translateX(-50%) rotateZ(-15deg);
      }

      100% {
        opacity: 0.03;
        transform: translateY(-50%) translateX(-50%) rotateZ(0deg);
      }
    }

